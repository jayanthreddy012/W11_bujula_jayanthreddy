<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="@string/view_value"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.032"
            android:layout_margin="20dp" android:textSize="32sp"
            android:textStyle="bold" android:textAlignment="textEnd" android:id="@+id/view"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view">
        <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button1" android:layout_weight="1"
                android:textSize="30sp"/>
        <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button2" android:layout_weight="1"
                android:textSize="30sp"/>
        <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button3" android:layout_weight="1"
                android:textSize="30sp"/>
        <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button4" android:layout_weight="1"
                android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="-1dp"
            android:id="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
    >
        <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button5" android:layout_weight="1"
                android:textSize="30sp"/>
        <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button6" android:layout_weight="1"
                android:textSize="30sp"/>
        <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button7" android:layout_weight="1"
                android:textSize="30sp"/>
        <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button8" android:layout_weight="1"
                android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button9" android:layout_weight="1"
                android:textSize="30sp"/>
        <Button
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button10" android:layout_weight="1"
                android:textSize="30sp"/>
        <Button
                android:text="11"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button11" android:layout_weight="1"
                android:textSize="30sp"/>
        <Button
                android:text="12"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/button12" android:layout_weight="1"
                android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:id="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <Button
                android:text="undo"
                android:layout_width="115dp"
                android:layout_height="100sp" android:id="@+id/undo" android:layout_weight="1"
                android:textSize="30sp"/>
        <Button
                android:text="clear"
                android:layout_width="wrap_content"
                android:layout_height="100sp" android:id="@+id/clear" android:layout_weight="1"
                android:textSize="30sp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>